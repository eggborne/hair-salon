@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>@ViewBag.PageTitle</h1>

@if (@Model.Count == 0)
{
  <h3>No results!</h3>
} 

<ul class="client-list">
  @foreach(Client client in Model)
  {
    <li class="client-list-item">
      <span class="name">@Html.DisplayFor(model => client.FirstName) @Html.DisplayFor(model => client.LastName)</span>
      <a href='@Url.Action("Details", "Clients", new { id = client.ClientId })'>
          <button>See Details</button>
      </a>
    </li>
  }
</ul>

<a href='@Url.Action("Index", "Home")'>
  <button>Home</button>
</a>