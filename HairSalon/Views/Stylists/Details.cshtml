@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details for @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
<hr />

@if (@Model.Clients.Count == 0)
{
  <h3>No clients have been added for this stylist yet!</h3>
} 
else
{
  <h3>Specialty: @Html.DisplayFor(model => model.Specialty)</h3>
  <h3>Hire Date: @Html.DisplayFor(model => model.HireDate)</h3>
  <h3>Clients:</h3>
  <ul class="client-list">
    @foreach (Client client in Model.Clients)
    {
      <li>
        <h2>@Html.DisplayFor(model => client.FirstName) @Html.DisplayFor(model => client.LastName)</h2>
        <a href='@Url.Action("Edit", "Clients", new { id = client.ClientId })'>
          <button class="yellow">Edit Client</button>
        </a>
      </li>
      @* <li>@Html.ActionLink($"{client.LastName}", "Details", "Clients", new { id = client.ClientId })</li> *@
    }
  </ul>
}

<a href='@Url.Action("Index")'>
  <button>Back to list</button>
</a>
<a href='@Url.Action("Edit", new { id = Model.StylistId })'>
  <button class="yellow">Edit Stylist</button>
</a>
<a href='@Url.Action("Delete", new { id = Model.StylistId })'>
  <button class="red">Delete Stylist</button>
</a>