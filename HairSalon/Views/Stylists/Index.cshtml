@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

<ul class="stylist-list">
  @foreach(Stylist stylist in Model)
  {
    <li class="stylist-list-item">
      <span class="name">@Html.DisplayFor(model => stylist.FirstName) @Html.DisplayFor(model => stylist.LastName)</span>
      <a href='@Url.Action("Details", "Stylists", new { id = stylist.StylistId })'>
          <button>See Details</button>
      </a>
    </li>
  }
</ul>

<a href='@Url.Action("Create")'>
  <button>Add New Stylist</button>
</a>
<a href='@Url.Action("Index", "Home")'>
  <button>Home</button>
</a>